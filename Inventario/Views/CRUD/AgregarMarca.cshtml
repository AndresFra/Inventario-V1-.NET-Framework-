@model Inventario.Models.ViewModel.MarcasViewModel
@{
    ViewBag.Title = "AgregarMarca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AgregarMarca", "CRUD", FormMethod.Post))
{
    <style>
        h4 {
            text-align: center;
        }
    </style>
    <div class="row">
        <div class="col-md-12">


            <div class="container">
                <label for=""></label>
                <div class="row col-xs-12">
                    <h1>MARCAS <span class="badge bg-secondary">Agregar</span></h1>

                    <h4>Nombre de la marca</h4>
                    @Html.TextBoxFor(d => d.nombre, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.nombre, null, new { Style = "color:red" })

                    <br />
                    <button value="Guardar" type="submit" class="btn btn-primary">Guardar</button>
                    @*<button href="~/CRUD/AgregarEquipo" type="button" class="btn btn-outline-secondary">Cancelar</button>*@
                    <a href="~/CRUD/MarcaIndex" class="btn btn-outline-secondary">Cancelar</a>

                </div>
            </div>


        </div>

    </div>
}

