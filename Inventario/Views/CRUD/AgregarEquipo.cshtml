@model Inventario.Models.ViewModel.EquiposViewModel
@{
    ViewBag.Title = "AgregarEquipo";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@*<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
