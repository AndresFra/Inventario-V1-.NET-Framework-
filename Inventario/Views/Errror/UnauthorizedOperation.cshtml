
@{
    ViewBag.Title = "UnauthorizedOperation";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h2 class="headline text-red">Se necesitan las credenciales de administrador. </h2>
    
</section>

<section class="content">
    <div class="error-page">
        @*<h2 class="headline text-red">Ups, parece que ha ocurrido un error! </h2>*@
        <h1>
            Acceso denegado.
        </h1>
        <br />

        <div class="error-content">
            <h3>
                <i class="fade fa-warning text-capitalize text-red">
                    <p>El codigo de error es:</p>
                    @if (ViewBag.operacion != "")
                    {
                        <p>Operacion @ViewBag.operacion </p>
                    }

                    @if (ViewBag.modulo != "")
                    {
                        <p>Modulo @ViewBag.modulo </p>
                    }

                    @if (ViewBag.msjeErrorException != "")
                    {
                        <p> @ViewBag.msjeErrorException </p>
                    }
            </h3>
        </div>
    </div>
</section>

